<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div>
        <h4><%= @registered_application.name %></h4>
        <h5><%= @registered_application.url %></h5> <br>
        <small>
          submitted <%= time_ago_in_words(@registered_application.created_at) %> ago
        </small>

      </div>
      <hr>
      <div class="row">
        <h4>Events</h4>

        <% @events.each do |event, count| %>
          <h5><%= "#{event}: #{count.length}" %></h5>
        <% end %>

        <div><%= pie_chart @registered_application.events.group(:name).count %></div>
        <div><%= line_chart @registered_application.events.group_by_day(:created_at).count %></div>

      </div>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_registered_application_path(@registered_application), class: 'btn btn-info' %>
        <%= link_to "Delete", @registered_application, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
